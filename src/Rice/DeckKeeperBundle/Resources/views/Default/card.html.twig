{% extends "RiceDeckKeeperBundle::layout.html.twig" %}

{% block content %}
    <div id="templatemo_main">

        <div class="col_w620 float_l">

            <div class="post_box">
                <div class="post_header">
                    <a href="#"><h2>{{ card }}</h2></a>
                </div>
                <a href="#"><img src="images/templatemo_image_06.jpg" alt="Image"/></a>
                <p>{{ card.description }}</p>
                <p><strong>{{ card.artisticdescription }}</strong></p>

                <hr />

                <p>Set: <strong>{{ card.cardSet }}</strong></p>
                <p>Mana Cost: <strong>{{ card.manaCost }}</strong></p>
                <p>Type: <strong>{{ card.type }}</strong></p>
                <p>Sub Type: <strong>{{ card.subType }}</strong></p>
                <p>Rarity: <strong>{{ card.rarity }}</strong></p>
                <p>Power: <strong>{{ card.power }}</strong></p>
                <p>Toughness: <strong>{{ card.toughness }}</strong></p>
                <p>Artist: <strong>{{ card.artist }}</strong></p>
                <p>#: <strong>{{ card.number }}</strong></p>

                <div class="cleaner"></div>
            </div>

        </div>

        <div class="col_w300 float_r">
            <h3>Categories</h3>
            <ul class="tmo_list">
                <li>Cards</li>
                <li>Sets</li>
            </ul>
            <div class="cleaner h30"></div>

        </div>

        <div class="cleaner"></div>
    </div>
{% endblock content %}
